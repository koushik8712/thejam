{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "gunicorn app:app --bind 0.0.0.0:8080",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    },
    "variables": {
        "FLASK_ENV": "production",
        "DB_HOST": "crossover.proxy.rlwy.net",
        "DB_PORT": "57945",
        "DB_NAME": "railway",
        "DB_USER": "root"
    }
}
